@model ProyectoFinal.Models.Product

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateProduct</title>
</head>
<body>

    <h4>Product</h4>
    <hr />
    @{
        if (ViewBag.err == 1)
        {
            <div class="alert alert-danger" role="alert">
               @ViewBag.msj;
            </div>
        }

    }
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateProduct" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="idProducts" class="control-label"></label>
                    <input asp-for="idProducts" class="form-control" />
                    <span asp-validation-for="idProducts" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDesc" class="control-label"></label>
                    <input asp-for="ProductDesc" class="form-control" />
                    <span asp-validation-for="ProductDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dimensions" class="control-label"></label>
                    <input asp-for="Dimensions" class="form-control" />
                    <span asp-validation-for="Dimensions" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Materials" class="control-label"></label>
                    <input asp-for="Materials" class="form-control" />
                    <span asp-validation-for="Materials" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductType" class="control-label"></label>
                    <input asp-for="ProductType" class="form-control" />
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockQ" class="control-label"></label>
                    <input asp-for="StockQ" class="form-control" />
                    <span asp-validation-for="StockQ" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThumbnailImage" class="control-label"></label>
                    <input asp-for="ThumbnailImage" class="form-control" />
                    <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Images" class="control-label"></label>
                    <input asp-for="Images" class="form-control" type="file" multiple />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
