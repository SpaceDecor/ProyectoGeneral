@model ProyectoFinal.Models.ViewModels

<div class="container-fluid px-sm-1 py-5">
    <div class="row ">


        <div class="d-flex col-lg-6">

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">


                    @{


                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.lstimages.First().url" alt="First slide">
                        </div>
                    }

                    @foreach (var item in Model.lstimages)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Html.DisplayFor(modelItem => item.url)" alt="First slide">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


        </div>


        @foreach (var item in Model.lstproducts)
        {
            <div class="col-lg-5">
                <h1 class="h2"> @Html.DisplayFor(modelItem => item.ProductName)</h1>
                <p> @Html.DisplayFor(modelItem => item.ProductDesc)</p>
                <h1 class="h2"> @Html.DisplayFor(modelItem => item.ProductType)</h1>
                <h1 class="h2"> @Html.DisplayFor(modelItem => item.Color)</h1>
                <h1 class="h2"> @Html.DisplayFor(modelItem => item.Dimensions)</h1>
                <h1 class="h2"> @Html.DisplayFor(modelItem => item.Materials)</h1>

            </div>
        }
    </div>
</div>
